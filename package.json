		"@types/glob": "^8.1.0",
		"@types/node-fetch": "^2.6.11",
		"@types/write-file-atomic": "^4.0.3",
		"ava": "^6.1.3",
		"esbuild": "0.24.0",
		"get-bin-path": "^11.0.0",
		"husky": "^9.1.6",
